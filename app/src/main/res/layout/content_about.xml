<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.machone.jcalc.view.AboutActivity"
    tools:showIn="@layout/activity_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_jcalc"
                android:layout_width="0dp"
                android:layout_height="@dimen/about_icon_height"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/about_side_margins"
                android:layout_marginRight="@dimen/about_side_margins"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_weight="1"
                android:contentDescription="@string/jcalc_icon"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/image_machone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="@dimen/about_side_margins"
                android:layout_marginRight="@dimen/about_side_margins"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:contentDescription="@string/mach_one_software_logo"
                app:srcCompat="@drawable/machonesoftware_logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/about_side_margins"
                android:layout_marginStart="@dimen/about_side_margins"
                android:layout_weight="1"
                android:text="@string/about_jcalc"
                android:textSize="@dimen/fontsize_about_title" />

            <TextView
                android:id="@+id/textview_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/about_side_margins"
                android:layout_marginRight="@dimen/about_side_margins"
                android:layout_weight="1"
                android:text="@string/about_jcalc_version"
                android:textSize="@dimen/fontsize_about_description" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/about_side_margins"
            android:layout_marginLeft="@dimen/about_side_margins"
            android:layout_marginRight="@dimen/about_side_margins"
            android:layout_marginStart="@dimen/about_side_margins"
            android:text="@string/about_simple_calculator"
            android:textSize="@dimen/fontsize_about_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/about_side_margins"
            android:layout_marginLeft="@dimen/about_side_margins"
            android:layout_marginRight="@dimen/about_side_margins"
            android:layout_marginStart="@dimen/about_side_margins"
            android:text="@string/about_jcalc_description"
            android:textSize="@dimen/fontsize_about_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/about_side_margins"
            android:layout_marginLeft="@dimen/about_side_margins"
            android:layout_marginRight="@dimen/about_side_margins"
            android:layout_marginStart="@dimen/about_side_margins"
            android:text="@string/about_jcalc_description_extra"
            android:textSize="@dimen/fontsize_about_description" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/about_side_margins"
            android:layout_marginRight="@dimen/about_side_margins"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/about_machone_description"
            android:textSize="@dimen/fontsize_about_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/about_machone_mission"
            android:textSize="@dimen/fontsize_about_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/about_contact"
            android:textSize="@dimen/fontsize_about_description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/about_side_margins"
            android:layout_marginRight="@dimen/about_side_margins"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_review"
                android:layout_width="@dimen/aboutSocialButtonWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_googleplay"
                android:gravity="center"
                android:text="@string/review_on_google"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/text_facebook"
                android:layout_width="@dimen/aboutSocialButtonWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_facebook"
                android:gravity="center"
                android:text="@string/facebook" />

            <TextView
                android:id="@+id/text_twitter"
                android:layout_width="@dimen/aboutSocialButtonWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_twitter"
                android:gravity="center"
                android:text="@string/twitter" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="@dimen/aboutSocialButtonWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_email_compat"
                android:gravity="center"
                android:text="@string/email" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
