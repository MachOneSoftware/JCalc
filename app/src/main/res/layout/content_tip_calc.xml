    <TextView
        android:id="@+id/textview_percent25_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/percent25"
        android:textColor="@color/colorTipTextView"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/textview_center_helper"
        app:layout_constraintTop_toBottomOf="@+id/textview_percent20_string" />

    <TextView
        android:id="@+id/textview_tip15_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTipTextView"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textview_center_helper"
        app:layout_constraintTop_toBottomOf="@+id/textview_suggestedtip_string" />

