    <TextView
        android:id="@+id/textview_suggestedtip_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/suggested_tips"
        android:textColor="@color/colorTipTextView"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_subtotal_input" />

    <TextView
        android:id="@+id/textview_percent15_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/percent15"
        android:textColor="@color/colorTipTextView"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/textview_center_helper"
        app:layout_constraintTop_toBottomOf="@+id/textview_suggestedtip_string" />

    <TextView
        android:id="@+id/textview_percent175_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
