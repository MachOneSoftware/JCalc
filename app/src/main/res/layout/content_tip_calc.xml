<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.machone.jcalc.TipCalcActivity"
    tools:showIn="@layout/activity_tip_calc">

    <TextView
        android:id="@+id/textview_subtotal_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/subtotal"
        android:textColor="@color/colorTipTextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_subtotal_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="$0.00"
        android:textAlignment="center"
        android:textColor="@color/colorTipInputText"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_subtotal_string" />

    <Button
        android:id="@+id/submit"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipAcceptButton"
        android:fontFamily="casual"
        android:text="âœ“"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipCancelButton"
        android:fontFamily="casual"
        android:text="X"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/zero"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <Button
        android:id="@+id/zero"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="9"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/textview_subtotal_input" />

    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="8"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_subtotal_input" />

    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="7"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_subtotal_input" />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="6"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/tipCalcButtons"
        android:layout_height="@dimen/tipCalcButtons"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTipNumericButton"
        android:fontFamily="casual"
        android:text="5"
        android:textColor="@color/colorTipButtonText"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/tipCalcButtons"
