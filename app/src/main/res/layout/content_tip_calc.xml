        android:id="@+id/textview_tip175_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTipTextView"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textview_center_helper"
        app:layout_constraintTop_toBottomOf="@+id/textview_tip15_output" />

    <TextView
        android:id="@+id/textview_tip20_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTipTextView"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textview_center_helper"
