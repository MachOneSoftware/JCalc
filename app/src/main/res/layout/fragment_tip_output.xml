<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.tipcalc.TipOutputFragment">

    <TextView
        android:id="@+id/textview_suggestedtip_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/suggested_tips"
        android:textColor="@color/colorTipLabelTextView"
        android:textSize="@dimen/tipCalcLabels"
        android:textStyle="italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_percent15_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="@string/percent15"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutputLabels"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_suggestedtip_string" />

    <TextView
        android:id="@+id/textview_percent175_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="@string/percent175"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutputLabels"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_percent15_string" />

    <TextView
        android:id="@+id/textview_percent20_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="@string/percent20"
        android:textColor="@color/colorTipOutputEmphasisTextView"
        android:textSize="@dimen/tipCalcOutputLabels"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_percent175_string" />

    <TextView
        android:id="@+id/textview_custom_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="@string/percent"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutputLabels"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_percent20_string" />

    <TextView
        android:id="@+id/textview_tip15_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutput"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_suggestedtip_string" />

    <TextView
        android:id="@+id/textview_tip175_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutput"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_tip15_output" />

    <TextView
        android:id="@+id/textview_tip20_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:textColor="@color/colorTipOutputEmphasisTextView"
        android:textSize="@dimen/tipCalcOutput"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_tip175_output" />

    <TextView
        android:id="@+id/textview_custom_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutput"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/space_textview"
        app:layout_constraintTop_toBottomOf="@+id/textview_tip20_output" />

    <Space
        android:id="@+id/space_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:id="@+id/space_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/customPercentage"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="right"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/tip_custom_percent_default"
        android:textColor="@color/colorTipOutputTextView"
        android:textSize="@dimen/tipCalcOutputLabels"
        app:layout_constraintEnd_toStartOf="@+id/textview_custom_string"
        app:layout_constraintTop_toBottomOf="@+id/textview_percent20_string" />

</android.support.constraint.ConstraintLayout>